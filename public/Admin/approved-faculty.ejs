<div ng-app="grievances" ng-controller="Admin_apprv_user" ng-init="init('faculty')">
    <h1>Approved Faculty List</h1>
    <div id="apprv_list" class="contenttable">
        <table class="table table-hover table-striped">
            <thead class="table-success">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Employee ID</th>
                    <th>Email ID</th>
                    <th>Mobile No.</th>
                    <th>Action</th>
                </tr> 
            </thead>
            <tr ng-repeat="user in users">
                <td>{{$index+1}}</td>
                <td>{{user.name}}</td>
                <td>{{user.gender}}</td>
                <td>{{user.dep}}</td>
                <td>{{user.Desig}}</td>
                <td>{{user.id}}</td>
                <td>{{user.emailid}}</td>
                <td>{{user.mobileno}}</td>
                <td>
                <button ng-click="Deactivate_user('Faculty',user.emailid)" class="btn btn-danger">
                        Deactivate
                    </button>
                    </td>
            </tr>
        </table>
    </div>
    <div id="loading">
        <div class="loader">
        </div>
        
        <h1>Loading...</h1>
    </div>

</div>

