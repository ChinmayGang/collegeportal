<!--Grievance cell members-->
<!--Admin-->
<div ng-app="grievances" ng-controller="Admin_GCM">
    <h1>Grievance Cell Members</h1>
    <div id="grievances" class="contenttable">
        <table class="table table-hover table-striped">
            <thead class="table-success">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Email ID</th>
                    <th>Mobile No.</th>
                    <th>Action</th>
                </tr> 
            </thead>
            <tr ng-repeat="member in members">
                <td>{{$index+1}}</td>
                <td>{{member.name}}</td>
                <td>{{member.designation}}</td>
                <td>{{member.emailid}}</td>
                <td>{{member.mobileno}}</td>

                <td>
                    <button ng-click="Deactivate(member.emailid)" class="btn btn-danger">
                        Deactivate
                    </button>
                </td>
            </tr>
        </table>
    </div>
    <div id="loading">
        <div class="loader">
        </div>
        
        <h1>Loading...</h1>
    </div>

</div>

