<div ng-app="grievances" ng-controller="Admin_apprv_user" ng-init="init('parent')">
    <h1>Approved Parents List</h1>
    <div id="apprv_list" class="contenttable hide">
        <table class="table table-hover table-striped">
            <thead class="table-success">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Email ID</th>
                    <th>Ward_ID</th>
                    <th>Mobile No.</th>
                    <th>Relationship</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tr ng-repeat="user in users">
                <td>{{$index+1}}</td>
                <td>{{user.name}}</td>
                <td>{{user.emailid}}</td>
                <td>{{user.ward_id}}</td>
                <td>{{user.mobileno}}</td>
                <td>{{user.relation}}</td>
                <td>
                <button ng-click="Deactivate_user('Parent',user.emailid)" class="btn btn-danger">
                    Deactivate
                </button>
                </td>
            </tr>
        </table>
    </div>
    <div id="loading">
        <div class="loader">
        </div>

        <h1>Loading...</h1>
    </div>

</div>
