<div class="content" ng-app="grievances" ng-controller="Management_grievances">
    <h1>Grievance Details</h1>
    <div class="row" id="SearchAndShow">
        <div class="col-sm-5">
        <div class="form-group">
                <label>Show</label> 
                <select name="entry" type="text" >
                    <option value="10">10</option>
                    <option value="20" >20</option>
                    <option value="100">50</option>
                    <option value="100">100</option>
                </select> <labe> Entries</labe>
            </div>
        </div>
        <div class="col-sm-4 col-sm-offset-3">
            <div class="form-group">
                <label> Search:</label>
                <input type="text" name="search">
            </div>
        </div>
    </div>

    <div class="content-table1">
        <table class="table table-hover">
            <tr class="active">
                <td>S. No.</td>
                <td>Grievance No.</td>
                <td>Grievance Type</td>
                <td>Subject</td>
                <td>Grievance</td>
                <td>Status</td>
                <td>Action</td>
            </tr> 
            <tr ng-repeat="result in result">
                <td>{{$index+1}}</td>
                <td>{{result.grv_id}}</td>
                <td>{{result.Gtype}} </td>
                <td>{{result.subject}}</td>
                <td>{{result.Grv}}</td>
                <td>{{result.status}}</td>
                <td>{{result.reply}}</td>
            </tr>
        </table>
    </div>

    <div class="nav-button">
        <a>Previous</a>
        <a>Next</a>
    </div>


</div>

</div>