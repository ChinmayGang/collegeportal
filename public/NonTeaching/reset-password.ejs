<!--Parent-->
<h1>Change Password</h1>

<form ng-submit="resetpass()" ng-app="grievances" ng-controller="NonTeaching">
    <div class="form-group" >
       <div class="row">
           <div class="col-sm-2 col-sm-offset-1">
               <label class="control-lable"> Current Password</label>
           </div>
           <div class="col-sm-7">
               <input class="form-control" type="password" ng-model="current_password" ng-init="current-password="''">
           </div>
       </div>
   </div>

   <div class="form-group" >
       <div class="row">
           <div class="col-sm-2 col-sm-offset-1">
               <label class="control-lable"> New Password</label>
           </div>
           <div class="col-sm-7">
               <input class="form-control" type="password" ng-model="new_password">
           </div>
       </div>
   </div>

   <div class="form-group" >
       <div class="row">
           <div class="col-sm-2 col-sm-offset-1">
               <label class="control-lable"> Confirm Password</label>
           </div>
           <div class="col-sm-7">
               <input class="form-control" type="password" ng-model="new_password1">
           </div>
       </div>
   </div>

   <div class="form-group" >
       <div class="col-sm-7 col-sm-offset-3">
           <button class="btn btn-default" type="submit">Update</button>
       </div>
   </div>
</form>
</body>